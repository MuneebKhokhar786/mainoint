modules = ["web", "python-3.12", "nodejs-20"]
run = "python3 manage.py runserver 0.0.0.0:3000"

[nix]
channel = "stable-24_05"
packages = ["cacert", "pgadmin4"]

[deployment]
run = ["sh", "-c", "python3 manage.py runserver 0.0.0.0:3000"]

[workflows]
runButton = "Start Modern Stack"

[[workflows.workflow]]
name = "Start Backend"
author = 45425848
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && uvicorn main:app --host 0.0.0.0 --port 8000 --reload"

[[workflows.workflow]]
name = "Start Frontend"
author = 45425848
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev"

[[workflows.workflow]]
name = "Install Dependencies"
author = 45425848
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && pip install fastapi uvicorn sqlalchemy psycopg2-binary redis python-multipart"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm install"

[[workflows.workflow]]
name = "Development"
author = 45425848
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run db:generate"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Start Modern Stack"
author = 45425848
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd modern-stack/backend && pip install -r requirements.txt --break-system-packages && python -m uvicorn main:app --host 0.0.0.0 --port 8000 --reload"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd modern-stack/frontend && npm install && npm run dev -- --port 3000"

[[ports]]
localPort = 3000
externalPort = 80
